@model AppInmobiliaria.Models.Contrato

@{
    ViewData["Title"] = "Delete";
    var Inmu = (Inmueble)ViewBag.inmueble;
    var inqui = (Inquilino)ViewBag.inquilino;
}

<h1>Delete</h1>

<h3>está seguro de eliminar este registro?</h3>
<div>
    <h4>Contrato</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InmuebleId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InmuebleId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InquilinoId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InquilinoId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFinal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFinal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MontoMensual)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MontoMensual)
        </dd>
    </dl>
    @if (User.IsInRole("Administrador"))
    {
        <form asp-action="Delete" id="deleteForm">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Regresar</a>
        </form>
    }
</div>
<script>
    document.getElementById('deleteForm').addEventListener('submit', function (event) {
        event.preventDefault();

        if (confirm('¿Estás seguro de que deseas eliminar este registro? Al elimiarlo perderá toda relación con Contratos,Inmuebles,Inquilinos,Pagos')) {
            this.submit();
        }
    });
</script>
